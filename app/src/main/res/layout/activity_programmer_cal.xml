<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_drawer"
    tools:context=".ProgrammerCal">

    <!-- 콘텐츠 영억 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EAF6FF"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/Theme.Calculator.Toolbar">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로그래머 계산기"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_gravity="center"/>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/tv_expression"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#737373"/>

                <TextView
                    android:id="@+id/tv_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/black"
                    android:textSize="50dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left">

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/bt_hex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/radiobutton"
                            android:text="HEX\t\t\t0"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                        <RadioButton
                            android:id="@+id/bt_dec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/radiobutton"
                            android:text="DEC\t\t\t0"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                        <RadioButton
                            android:id="@+id/bt_oct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/radiobutton"
                            android:text="OCT\t\t\t0"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                        <RadioButton
                            android:id="@+id/bt_bin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/radiobutton"
                            android:text="BIN\t\t\t\t0"
                            android:textColor="@color/black"
                            android:textSize="18dp" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:stretchColumns="*"
                    >

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0"
                        android:weightSum="5"
                        >

                        <Button
                            android:id="@+id/bt_A"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_white"
                            android:text="A"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btClick"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_leftShift"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_gray"
                            android:shadowColor="@color/black"
                            android:text="《"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btShift"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_rightShift"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_gray"
                            android:text="》"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btShift"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_clear"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_gray"
                            android:text="C"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="clearClick"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_gray"
                            android:text="DEL"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="deleteClick"
                            android:textSize="18sp" />
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0"
                        android:weightSum="5">

                        <Button
                            android:id="@+id/bt_B"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_white"
                            android:text="B"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btClick"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_leftBracket"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_white"
                            android:text="("
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btBracket"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_rightBracket"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_white"
                            android:text=")"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btBracket"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_gray"
                            android:text="%"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btPercent"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_div"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_gray"
                            android:text="/"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btClick"
                            android:textSize="18sp" />
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0"
                        android:weightSum="5">

                        <Button
                            android:id="@+id/bt_C"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_white"
                            android:text="C"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btClick"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_7"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_white"
                            android:text="7"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btClick"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_8"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_white"
                            android:text="8"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btClick"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_9"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_white"
                            android:text="9"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btClick"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_mul"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_gray"
                            android:text="X"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btClick"
                            android:textSize="18sp" />
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0"
                        android:weightSum="5">

                        <Button
                            android:id="@+id/bt_D"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_white"
                            android:text="D"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btClick"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_white"
                            android:text="4"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btClick"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_white"
                            android:text="5"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btClick"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_6"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_white"
                            android:text="6"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btClick"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_sub"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_gray"
                            android:text="-"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btClick"
                            android:textSize="18sp" />
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0"
                        android:weightSum="5">

                        <Button
                            android:id="@+id/bt_E"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_white"
                            android:text="E"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btClick"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_white"
                            android:text="1"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btClick"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_white"
                            android:text="2"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btClick"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_white"
                            android:text="3"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btClick"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_add"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_gray"
                            android:text="+"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btClick"
                            android:textSize="18sp" />
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0"
                        android:weightSum="5">

                        <Button
                            android:id="@+id/bt_F"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_white"
                            android:text="F"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btClick"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_negative"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_white"
                            android:text="+/-"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="negaClick"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_0"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_white"
                            android:text="0"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btClick"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_point"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_white"
                            android:text="."
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btClick"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_res"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_blue"
                            android:text="="
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:onClick="btResult"
                            android:textSize="18sp" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 사이드 드로우어 메뉴 -->
    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nav"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu"/>
</androidx.drawerlayout.widget.DrawerLayout>